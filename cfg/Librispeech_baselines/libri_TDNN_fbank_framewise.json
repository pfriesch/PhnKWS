{
  "exp": {
    "save_dir": "../exp",
    "name": "libri_TDNN_fbank",
    "seed": 2234,
    "n_gpu": 1,
    "prefetch_to_gpu": true,
    "n_epochs_tr": 24,
    "save_period": 1
  },
  "data_use": {
    "data_root": "/mnt/data/pytorch-kaldi/data",
    //todo allow multiple inputs
    "train_with": "train_clean_100",
    "valid_with": "dev_clean",
    "test_with": "test_clean",
    "kws_eval_with": "google_speech_commands_dev"
  },
  "datasets": {
    "train_clean_100": {
      "features": {
        "fbank": {
          "feature_lst_path": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/train_clean_100/feats_fbank.scp",
          "feature_opts": "apply-cmvn --utt2spk=ark:/mnt/data/libs/kaldi/egs/librispeech/s5/data/train_clean_100/utt2spk  ark:/mnt/data/libs/kaldi/egs/librispeech/s5/fbank/cmvn_train_clean_100.ark ark:- ark:- | add-deltas --delta-order=0 ark:- ark:- |",
          "n_samples_per_chunk": 800
        }
      },
      "labels": {
        "lab_cd": {
          "label_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b/",
          "label_opts": "ali-to-pdf",
          "lab_count_file": "auto",
          "lab_data_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/train_clean_100/",
          "lab_graph": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b/graph_tgsmall/"
        }
      }
    },
    "dev_clean": {
      "features": {
        "fbank": {
          "feature_lst_path": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/dev_clean/feats_fbank.scp",
          "feature_opts": "apply-cmvn --utt2spk=ark:/mnt/data/libs/kaldi/egs/librispeech/s5/data/dev_clean/utt2spk  ark:/mnt/data/libs/kaldi/egs/librispeech/s5/fbank/cmvn_dev_clean.ark ark:- ark:- | add-deltas --delta-order=0 ark:- ark:- |",
          "n_samples_per_chunk": 800
        }
      },
      "labels": {
        "lab_cd": {
          "label_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b_ali_dev_clean_100",
          "label_opts": "ali-to-pdf",
          "lab_count_file": "auto",
          "lab_data_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/dev_clean/",
          "lab_graph": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b/graph_tgsmall/"
        }
      }
    },
    "test_clean": {
      "features": {
        "fbank": {
          "feature_lst_path": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/test_clean/feats_fbank.scp",
          "feature_opts": "apply-cmvn --utt2spk=ark:/mnt/data/libs/kaldi/egs/librispeech/s5/data/test_clean/utt2spk  ark:/mnt/data/libs/kaldi/egs/librispeech/s5/fbank/cmvn_test_clean.ark ark:- ark:- | add-deltas --delta-order=0 ark:- ark:- |",
          "n_samples_per_chunk": 800
        }
      },
      "labels": {
        "lab_cd": {
          "label_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b_ali_test_clean_100/",
          "label_opts": "ali-to-pdf",
          "lab_count_file": "auto",
          "lab_data_folder": "/mnt/data/libs/kaldi/egs/librispeech/s5/data/test_clean/",
          "lab_graph": "/mnt/data/libs/kaldi/egs/librispeech/s5/exp/tri4b/graph_tgsmall/"
        }
      }
    }
  },
  "google_speech_commands_dev": {
    "features": {
      "fbank": {
        "feature_lst_path": "/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/dev/feats.scp",
        "feature_opts": "apply-cmvn --utt2spk=ark:/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/dev/utt2spk  ark:/mnt/data/libs/kaldi/egs/google_speech_commands/kws/fbank/cmvn_dev.ark ark:- ark:- | add-deltas --delta-order=0 ark:- ark:- |"
      }
    },
    "labels": {
      "lab_text": {
        "text_path": "/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/test/text"
      }
    }
  },
  "google_speech_commands_test": {
    "features": {
      "fbank": {
        "feature_lst_path": "/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/test/feats.scp",
        "feature_opts": "apply-cmvn --utt2spk=ark:/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/test/utt2spk  ark:/mnt/data/libs/kaldi/egs/google_speech_commands/kws/fbank/cmvn_test.ark ark:- ark:- | add-deltas --delta-order=0 ark:- ark:- |"
      }
    },
    "labels": {
      "lab_text": {
        "text_path": "/mnt/data/libs/kaldi/egs/google_speech_commands/kws/data_kws/test/text"
      }
    }
  },
  "training": {
    "batch_size_train": 1,
    "max_seq_length_train": 1000,
    "increase_seq_length_train": false,
    "start_seq_len_train": 100,
    "multply_factor_seq_len_train": 2,
    "batch_size_valid": 1,
    "max_seq_length_valid": 1000,
    "sort_by_feat": "fbank",
    "clip_grad_norm": -1,
    "optimizer": {
      "type": "sgd",
      "args": {
        "lr": 0.08,
        "momentum": 0.0,
        "weight_decay": 0.0,
        "dampening": 0.0,
        "nesterov": false
      }
    },
    "lr_scheduler": {
      "arch_halving_factor": 0.5,
      "arch_improvement_threshold": 0.001
    }
  },
  "arch": {
    "name": "TDNN_cd_libri",
    "framewise_labels": true,
    "args": {
      "input_feat_length": 40,
      "input_feat_name": "fbank"
//      "lab_mono_num": 346
    },
    "loss": {
      "name": "CE_cd",
      "args": {
      }
    },
    "metrics": [
      "acc_lab_cd",
      "err_lab_cd"
    ]
  },
  "test": {
    "out_cd": {
      "normalize_posteriors": true,
      "normalize_with_counts_from": "lab_cd",
      "save_out_file": true,
      "require_decoding": true
    }
  },
  "decoding": {
    "min_active": 200,
    "max_active": 7000,
    "max_mem": 50000000,
    "beam": 20.0,
    "latbeam": 12.0,
    "acwt": 0.10,
    "max_arcs": -1.0,
    "scoring_type": "libri",
    "scoring_opts": {"min_lmwt": 4, "max_lmwt": 23},
    "norm_vars": false
  },
  "kws_decoding": {
  }
}