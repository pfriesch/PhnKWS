{
  "exp": {
    "save_dir": "../exp",
    "name": "libri_MLP_fbank",
    "seed": 2234,
    "n_gpu": 1,
    "prefetch_to_gpu": true,
    "n_epochs_tr": 24,
    "save_period": 1,
    "checkpoint_interval_seconds": 10000000000000,
    "compute_train_metrics": true,
    "data_cache_root": "/mnt/data/pytorch-kaldi/data_cache"
  },
  "dataset": {
    "name": "librispeech",
    "data_use": {
      "train_with": "train_clean_100",
      "valid_with": "dev_clean",
      "test_with": "test_clean"
    },
    "features_use": ["fbank"],
    "labels_use": ["lab_cd", "lab_mono"]
  },
  "training": {
    "dataset_type": "FRAMEWISE_SHUFFLED_FRAMES",
    "max_seq_length_train": null,
    "start_seq_len_train": null,
    "increase_seq_length_train": false,
    "multply_factor_seq_len_train": null,
    "max_seq_length_valid": null,
    "batch_size_train": 128,
    "batch_size_valid": 128,
    "clip_grad_norm": -1,
    "optimizer": {
      "type": "adam",
      "args": {
        "lr": 1e-4,
        "amsgrad": true
      }
    },
    "lr_scheduler": {
      "patience": 1,
      "arch_halving_factor": 0.5,
      "arch_improvement_threshold": 1e-4,
      "cooldown": 1,
      "min_lr": 1e-7
    }
  },
  "arch": {
    "name": "MLP_mtl",
    "loss": {
      "name": "CE_mtl_mono_cd",
      "args": {
        "weight_mono": 1.0
      }
    },
    "metrics": [
      "acc_lab_cd",
      "err_lab_cd",
      "acc_lab_mono",
      "err_lab_mono"
    ]
  }
}